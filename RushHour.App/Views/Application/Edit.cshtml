<h2>Edit Allowed Appointments</h2>
@using (Html.BeginForm("Edit", "Application", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("Allowed Appointments", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBox("value", null ,new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Edit" />
        </div>
    </div>
}

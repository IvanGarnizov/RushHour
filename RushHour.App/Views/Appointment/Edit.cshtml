@using RushHour.App.Models.BindingModels
@model AppointmentBindingModel

<h2>Edit Appointment</h2>
@using (Html.BeginForm("Edit", "Appointment", new { id = ViewBag.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.StartDateTime, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.StartDateTime, new { @class = "form-control datepicker" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EndDateTime, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.EndDateTime, new { @class = "form-control datepicker" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Edit" />
        </div>
    </div>
}

@section Scripts
{
    <script>
        $(function () {
            $('.datepicker').datetimepicker();
        });
    </script>
}